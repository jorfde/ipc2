               <children>
                  <Label text="Rest Time (Circuit):" />
                  <TextField fx:id="restCField" />
                  <Label fx:id="labelRestC" minWidth="210.0" textFill="#f41717" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
