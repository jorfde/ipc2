               <children>
                  <Label text="Nº Exercises: " />
                  <TextField fx:id="numberEField" />
                  <Label fx:id="labelNumberE" minWidth="210.0" textFill="#f41717" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Working Time:" />
